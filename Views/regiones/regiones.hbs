
<div class="card">
  <div class="card-body">
<h1 class="text-white">{{pageTitle}}</h1>

<div class="row mt-2 mb-2">
  <div class="col-12 col-sm-4">
    <a href="/regiones/create" class="btn btn-info">
    <i class="bi bi-plus-circle"></i> Agregar Region
    </a>
  </div>
</div>
</div>
</div>

<div class="row gx-3 gy-3"> 
  {{#each regiones}}
    <div class="col-12 col-sm-6 col-md-4 d-flex"> 
      <div class="card"> 
        <div class="card-body d-flex flex-column justify-content-between">
          <h4 class="card-title text-muted text-center">{{this.nombre}}</h4>

          <div class="mt-2 d-flex justify-content-center">
            <form method="post" action="/regiones/delete/{{this.id}}" class="form-delete d-inline me-2">
              <button type="button" class="btn btn-secondary delete-region px-1" onclick="confirmDelete(this)">
              <i class="bi bi-trash"></i> Borrar</button>
            </form>
            <a href="/regiones/edit/{{this.id}}" class="btn btn-info px-1"> 
            <i class="bi bi-pencil-square"></i> Editar</a>
          </div>


        </div>
      </div>
    </div>
  {{/each}}
</div>



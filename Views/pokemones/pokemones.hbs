<div class ="card">
  <div class="card-body">
    <div class ="d-flex justify-content-between align-items-center">
      <h1 class="text-white">{{pageTitle}}</h1>
      <h1 class="text-white">Total: {{pokemones.length}}</h1>
    </div>

    <div class="row mt-2 mb-2">
      <div class="col-12 col-sm-4">
        <a href="/pokemones/create" class="btn btn-info">
          <i class="bi bi-plus-circle"></i> Agregar Pokemon
        </a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  {{#each pokemones}}
    <div class="col-6 col-sm-4 col-md-2"> 
      <div class="card">
        <img src="{{this.imagen}}" class="card-img-top img-size" alt="{{this.nombre}}" />
        <div class="card-body d-flex flex-column ">
          <h5 class="card-title text-muted text-center">{{this.nombre}}</h5>
          <h6 class="card-subtitle mb-2 text-muted text-center">Tipo: {{this.tipo.nombre}}</h6>  
          <h6 class="card-subtitle mb-2 text-muted text-center">Regi√≥n: {{this.region.nombre}}</h6>  

          <div class="mt-2 d-flex justify-content-center"> 
            <form method="post" action="/pokemones/delete/{{this.id}}" class="form-delete d-inline me-2">
              <button type="button" class="btn btn-secondary delete-pokemon" onclick="confirmDelete(this)">
              <i class="bi bi-trash"></i> Borrar</button>
            </form>
            <a href="/pokemones/edit/{{this.id}}" class="btn btn-info">
            <i class="bi bi-pencil-square"></i> Editar</a>
          </div>

        </div>
      </div>
    </div>
  {{/each}}
</div>

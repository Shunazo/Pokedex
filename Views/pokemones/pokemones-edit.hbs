<link rel="stylesheet" href="../../assets/css/style.css">

<div class="row align-items-center">
    <div class="col-12 col-sm-6 offset-sm-3">
        <div class="card">
            <div class="card-body">
                <h1 class="text-white text-center">{{pageTitle}}</h1>
                <br>
                <form method="POST" action="/pokemones/edit/{{pokemon.id}}" novalidate>
                    
                    <input type="hidden" name="id" value="{{pokemon.id}}" />

                    <div class="mb-3">
                        <label for="nombre" class="form-label text-white">Nombre del Pokémon</label>
                        <input type="text" class="form-control text-info" id="nombre" name="nombre" value="{{pokemon.nombre}}" required />
                    </div>

                    <div class="mb-3">
                        <label for="imagen" class="form-label text-white">URL de la Imagen</label>
                        <input type="text" class="form-control text-info" id="imagen" name="imagen" value="{{pokemon.imagen}}" required />
                    </div>

                    <div class="mb-3">
                        <label for="tipo" class="form-label text-white">Tipo</label>
                        <select class="form-select text-info" id="tipo" name="tipoId" required>
                            <option value selected disabled="">Seleccione un tipo</option>
                            {{#each tipos}}
                                <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>
                                    {{this.nombre}}
                                </option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="region" class="form-label text-white">Región</label>
                        <select class="form-select text-info" id="region" name="regionId" required>
                            <option value selected disabled="">Seleccione una región</option>
                            {{#each regiones}}
                                <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>
                                    {{this.nombre}}
                                </option>
                            {{/each}}
                        </select>
                    </div>

                    <button type="submit" class="btn btn-info float-end" onclick="confirmCreateOrEdit(this, event)"> 
                        <i class="bi bi-check"></i> Guardar Cambios</button>
                    <a href="/pokemones" class="btn btn-secondary float-end me-2">
                        <i class="bi bi-x"></i>Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="../../assets/js/index.js"></script>

